<h1>Регистрация</h1>
<form name="registrationForm" action="/registration" method="POST">

  <label for="nameInput">Имя:</label>
  <input id="nameInput" type="text" name="name" required/>

  <br />

  <label for="surnameInput">Фамилия:</label>
  <input id="surnameInput" type="text" name="surname" />

  <br />

  <label for="emailInput">email:</label>

  <input id="emailInput" type="email" name="email" required />

  <br />

  <label for="passwordInput">Пароль:</label>
  <input id="passwordInput" type="password" name="password" required />

  <br />

  <label for="doublePasswordInput">Повторите пароль:</label>
  <input id="doublePasswordInput" type="password" name="doublePassword" required/>

  <br />

  <button type="submit">Зарегистрироваться</button>

</form>
